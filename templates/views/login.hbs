    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.min.js" integrity="sha512-3dZ9wIrMMij8rOH7X3kLfXAzwtcHpuYpEgQg1OA4QAob1e81H8ntUQmQm3pBudqIoySO5j0tHN4ENzA6+n2r4w==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <title>Login Form</title>
    <link rel="stylesheet" href="style.css">
</head>
<style>
    
</style>
<body>
    <header>
        <div class="navigation">
            <div class="title">Meal Count</div>
        </div>
        <div id="datetime"></div>
    </header>
    <main class="main">
                
        <div class="regform log">
            <div class="form-des">
                <p class="formtitle">Login</p>
            <div class="form-header-logo">
                <i class="fa-solid fa-user" style="color: #ffffff;"></i>
            </div>
        </div>

            <form class="logform" action="/login" method="post">
                <div class="formelm">
                    <div class="formlogo eml"><i class="fa-solid fa-envelope" style="color: #ffffff;"></i></div>
                    <input type="email" name="email" placeholder="Enter the Email">
                </div>
                <div class="formelm">
                    <div class="formlogo psw"><i class="fa-solid fa-unlock-keyhole" style="color: #ffffff;"></i></div>
                    <input type="password" name="password" placeholder="Enter the Password">
                </div>
                
                <p>New Users <a href="/register" >Register here.</a></p>
                <button>Submit</button>
            </form>
        </div>
    </main>
    {{>footer}}
</body>
</html>